block main
  h1 Trang tổng quan
  .row
    .col-4 
      .card.mb-3
        .card-header.d-flex.justify-content-center Số lượng nhân viên
        .card-body.d-flex.justify-content-center #{numOfEmployees}
    .col-4
      .card.mb-3
        .card-header.d-flex.justify-content-center Số lượng thiết bị   
