extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  h1(class="mb-4") Cập nhật tài khoản

  form(
    action=`/admin/accounts/edit/${data.id}?_method=PATCH`
    method="POST"
  )
    div(class="form-group")
      label(for="fullName") Họ tên *
      input(
        type="text"
        class="form-control"
        id="fullName"
        name="fullName"
        required
        value=data.fullName
      )
    div(class="form-group")
      label(for="email") Email *
      input(
        type="email"
        class="form-control"
        id="email"
        name="email"
        required
        value=data.email
      )
    div(class="form-group")
      label(for="password") Mật khẩu
      input(
        type="password"
        class="form-control"
        id="password"
        name="password"
      )
    div(class="form-group")
      label(for="phone") Số điện thoại
      input(
        type="text"
        class="form-control"
        id="phone"
        name="phone"
        value=data.phone
      )
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật
